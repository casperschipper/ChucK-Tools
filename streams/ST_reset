public class ST_reset extends Stream 
{
    "ST_reset" @=> _type;
    
    ST_walk @ st_walk;
    Stream @ st_source;
    Stream @ st_reps;
    
    int repLeft;
    float memValue;
    
    0 => int _holdMode;
        
    fun ST_reset holdMode(int arg) {
        arg @=> _holdMode;
        return this;
    }
    
    fun int more() {
        if (_holdMode) {
            if (repLeft > 1) {
                return true;
            }
        } 
        return false;
    }           
         

    fun ST_reset walk(ST_walk walkArg) {
        walkArg @=> st_walk;
        return this;
    }

    fun ST_reset source(Stream sourceArg) {
        sourceArg @=> st_source;
        return this;
    }

    fun ST_reset repeat(Stream repeatArg) {
        repeatArg @=> st_reps;
        return this;
    }
    
    fun ST_reset init(ST_walk walkArg, Stream sourceArg,Stream repsArg) {
        walk(walkArg);
        source(sourceArg);
        repeat(repsArg);
        return this;
    }
    
    fun float next() {
        if (repLeft-- > 0) {
            return st_walk.next();
        } else {
            reps.nextInt() => repLeft;
            source.next() => st_walk.value() => memValue;
        }
        repLeft--;
        return memValue;
    }
}

class Main extends st {
    (new ST_reset).init( st.walk(0,st.ch(1,2)),st(0),st(4))
}

Main main;

hour => now;